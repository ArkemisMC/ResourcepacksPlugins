<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>parent</artifactId>
    <groupId>de.themoep.resourcepacksplugin</groupId>
    <version>parent</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>worldresourcepacks</artifactId>
  <name>WorldResourcepacks</name>
  <version>${plugin.version}</version>
  <description>Plugin to set Resource Packs on server per world</description>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>${project.basedir}/src/main/resources</directory>
      </resource>
      <resource>
        <directory>${project.basedir}/../</directory>
        <includes>
          <include>LICENSE</include>
        </includes>
      </resource>
    </resources>
    <finalName>${project.name}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.4.2</version>
        <configuration>
          <forceCreation>true</forceCreation>
          <archive>
            <manifest>
              <addDefaultEntries>true</addDefaultEntries>
            </manifest>
            <manifestEntries>
              <paperweight-mappings-namespace>mojang</paperweight-mappings-namespace>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <relocations>
            <relocation>
              <pattern>de.themoep.utils.lang</pattern>
              <shadedPattern>de.themoep.resourcepacksplugin.libs.lang</shadedPattern>
            </relocation>
            <relocation>
              <pattern>de.themoep.minedown.adventure</pattern>
              <shadedPattern>de.themoep.resourcepacksplugin.sponge.libs.minedown</shadedPattern>
            </relocation>
            <relocation>
              <pattern>de.themoep.minedown</pattern>
              <shadedPattern>de.themoep.resourcepacksplugin.bukkit.libs.minedown</shadedPattern>
            </relocation>
            <relocation>
              <pattern>org.bstats</pattern>
              <shadedPattern>de.themoep.resourcepacksplugin.bukkit.libs.bstats</shadedPattern>
            </relocation>
            <relocation>
              <pattern>de.themoep.utils.lang.bukkit</pattern>
              <shadedPattern>de.themoep.resourcepacksplugin.bukkit.libs.lang</shadedPattern>
            </relocation>
            <relocation>
              <pattern>de.themoep.utils.lang.sponge</pattern>
              <shadedPattern>de.themoep.resourcepacksplugin.sponge.libs.lang</shadedPattern>
            </relocation>
            <relocation>
              <pattern>net.kyori</pattern>
              <shadedPattern>de.themoep.resourcepacksplugin.sponge.libs.kyori</shadedPattern>
            </relocation>
            <relocation>
              <pattern>org.checkerframework</pattern>
              <shadedPattern>de.themoep.resourcepacksplugin.sponge.libs.checkerframework</shadedPattern>
            </relocation>
            <relocation>
              <pattern>org.intellij.lang.annotations</pattern>
              <shadedPattern>de.themoep.resourcepacksplugin.sponge.libs.intellijlanganno</shadedPattern>
            </relocation>
            <relocation>
              <pattern>org.jetbrains.annotations</pattern>
              <shadedPattern>de.themoep.resourcepacksplugin.sponge.libs.jetbrainsanno</shadedPattern>
            </relocation>
          </relocations>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
